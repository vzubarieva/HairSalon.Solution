@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Client Details</h2>
<hr />
<ul class="list-group list-group-flush">
  <li class="list-group-item">@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</li>
  <li class="list-group-item">@Html.DisplayNameFor(model => model.Details): @Html.DisplayFor(model => model.Details)</li>
</ul>

<div class="hstack gap-3 pt-3 mt-3 border-top border-dark">
@Html.ActionLink("Back to list", "Index", new { } , new {@class="btn btn-outline-secondary"})
@Html.ActionLink("Back to stylist", "Details", "Stylists", new { id = Model.StylistId }, new {@class="btn btn-outline-secondary"})
@Html.ActionLink("Edit client info", "Edit", new { id = Model.ClientId }, new {@class="btn btn-outline-secondary"})
@Html.ActionLink("Delete client", "Delete", new { id = Model.ClientId } , new {@class="btn btn-outline-secondary"})
</div>
