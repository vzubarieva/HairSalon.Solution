@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a new stylist</h4>
@using (Html.BeginForm())
{

  <div class="mb-3">@Html.LabelFor(model => model.Name, new {@class="form-label"})
    @Html.TextBoxFor(model => model.Name, new {@class="form-control"})</div>
  <div class="mb-3">@Html.LabelFor(model => model.Specialty, new {@class="form-label"})
    @Html.TextBoxFor(model => model.Specialty, new {@class="form-control"})</div>
  <input type="submit" value="Add new stylist" class="btn btn-primary" />
}

<div class="hstack gap-3 pt-3 mt-3 border-top border-dark">
  @Html.ActionLink("Show all styles", "Index", new { } , new {@class="btn btn-outline-secondary"})
</div>